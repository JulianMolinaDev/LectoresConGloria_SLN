@model LectoresConGloria_NET_MVC_ADM.Models.VM_FormatoLibro

@{
    ViewBag.Title = "AsignarFormatoALibro";
}

<h2>AsignarFormatoALibro</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>VM_FormatoLibro</h4>
        <hr />
        @Html.HiddenFor(model => model.IdLibro)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdFormato, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdFormato, new SelectList(ViewBag.Formatos), "Selecciona Formato:", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdFormato, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Libro")
</div>
