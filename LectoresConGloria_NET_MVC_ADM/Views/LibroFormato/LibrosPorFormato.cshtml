@model IEnumerable<LectoresConGloria_MDL.Vistas.V_ListaRelacion>

<h3>
    Libros por formato
</h3>

<table class="table">
    <tr>
        <th>
            Libro
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.ActionLink("Editar Libro", "Edit", "Libro", new { id = item.IdForanea }, null) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
