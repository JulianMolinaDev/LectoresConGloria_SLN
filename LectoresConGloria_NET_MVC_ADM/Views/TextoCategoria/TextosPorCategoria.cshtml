@model IEnumerable<LectoresConGloria_MDL.Vistas.V_ListaRelacion>

<h3>
    Textos por Categoría
</h3>

<table class="table">
    <tr>
        <th>
            Texto
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ActionLink("Editar Texto", "Edit", new { id = item.IdForanea }) |
            @Html.ActionLink("Editar Relacion", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
