@model LectoresConGloria_MDL.Modelos.MDL_TextoCategoria

@{
    ViewBag.Title = "AsociarCategoria";
}

<h2>Asociar Categoria</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Action("Titulo", "Texto", new { id = Model.IdTexto })

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdTexto)

        <div class="form-group">
            @Html.LabelFor(model => model.IdCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdCategoria, new SelectList(ViewBag.Categorias, "Id", "Valor"), "Selecciona Categoría:", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IdCategoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "Texto", new { id = Model.IdTexto })
</div>
